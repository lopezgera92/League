@page "{id}"
@model Teams.TeamModel
@{
    ViewData["Title"] = "NFL Team";
}

<div class="jumbotron p-2 d-flex">
    <h2 class="mr-auto display-3">
        <img src="~/image/nfl/logo/@(Model.Team.TeamId).png" asp-append-version="true" />
        @Model.Team.Location
        @Model.Team.Name
    </h2>
</div>

<div class="d-flex justify-content-between pb-2">
    <div>
        <div>@Model.Team.Division.ConferenceId - @Model.Team.DivisionId</div>
        <div>Record: @Model.Team.Win-@Model.Team.Loss-@Model.Team.Tie</div>
        <hr />
        <div>@Model.Team.Stadium Stadium</div>
        <div>Capacity: @Model.Team.Capacity</div>
        <hr />
        <div>@Model.Team.Address</div>
        <div class="pb-2">@(Model.Team.City), @Model.Team.State @Model.Team.Zip</div>
        <img src="~/image/nfl/stadium/@(Model.Team.TeamId).jpg" asp-append-version="true">
    </div>
    <img src="~/image/nfl/seating/@(Model.Team.TeamId).png" asp-append-version="true"/>
</div>

<section class="grid">
    <div class="d-flex bg-primary text-white">
        <div class="p-1" style="flex:0 0 10%">Number</div>
        <div class="p-1" style="flex:0 0 20%">Name</div>
        <div class="p-1" style="flex:0 0 10%">Position</div>
        <div class="p-1" style="flex:0 0 20%">Experience</div>
        <div class="p-1" style="flex:0 0 20%">College</div>
        <div class="p-1" style="flex:0 0 10%">Depth</div>
    </div>

    @foreach (Player Player in Model.Team.Players)
    {
        <a class="@Model.PlayerClass(Player)" asp-page="/Players/Player" asp-route-id="@Player.PlayerId">
            <div class="p-1" style="flex:0 0 10%">@Player.Number</div>
            <div class="p-1" style="flex:0 0 20%">@Player.Name</div>
            <div class="p-1" style="flex:0 0 10%">@Player.Position</div>
            <div class="p-1" style="flex:0 0 20%">@Player.Experience</div>
            <div class="p-1" style="flex:0 0 20%">@Player.College</div>
            <div class="p-1" style="flex:0 0 10%">@Player.Depth</div>
        </a>
    }
</section>